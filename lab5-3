#include <stdio.h>
#define int_len sizeof(int)
int reverse_binary(int num);

int main() {
    int i;
    printf("Enter a decimal number: ");
    scanf("%d", &i);
    
    printf("\nYou entered: %d", i);
    
    printf("\nThe reverse binary of %d is: ",i);
    
    reverse_binary(i);
    
    return 0;
}

int reverse_binary(int num)
{
    int mask=1;
    for (int i=0; i< int_len; i++)
    {
        if((mask & num) ==0 )
         printf("%d",0);
         else
         printf("%d",1);
         mask = mask << 1;
    }
}
